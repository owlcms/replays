{
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    "go.formatTool": "gofmt",
    "go.buildTags": "windows",
    "go.toolsEnvVars": {
        "GOOS": "windows",
        "GOARCH": "amd64"
    },
    "[go]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "go.testOnSave": false,
    "go.coverOnSave": false
}
